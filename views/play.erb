<div id="main-content">
  <div class="row play">
  <% if !@active_user %>
    <% if flash[:alert] %>
      <h3><strong><%= flash[:alert] %></strong></h3>
    <% end %>
    <h3>CHOOSE YOUR WEAPON, <strong><%= @current_player.capitalize %></strong></h3>
    <div class="large-4 columns">
      <a href="/rock/<%= @match_id %>" name="rock"><img src="<%= @root %>images/rocks.png" class="boulder"></a>
    </div>
    <div class="large-4 columns">
      <a href="/paper/<%= @match_id %>" name="paper"><img src="<%= @root %>images/paper.png"></a>
    </div>
    <div class="large-4 columns">
      <a href="/scissors/<%= @match_id %>" name="scissors"><img src="<%= @root %>images/scissors.png"></a>
    </div>
  <% else %>
    <h3>Waiting for <strong><% @active_user %></strong></h3>
    <img src="<%= @root %>images/404.png">
  <% end %>
  </div>
</div>