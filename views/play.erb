<div id="main-content">
  <div class="row play">
  <% if @active_user %>
    <h3>CHOOSE YOUR WEAPON, <strong><%= @current_player.capitalize %></strong></h3>
    <div class="large-4 columns">
      <a href="/rock/<%=%>" name="rock"><img src="images/rocks.png" class="boulder"></a>
    </div>
    <div class="large-4 columns">
      <a href="/paper/<%=%>" name="paper"><img src="images/paper.png"></a>
    </div>
    <div class="large-4 columns">
      <a href="/scissors/<%=%>" name="scissors"><img src="images/scissors.png"></a>
    </div>
  <% else %>
    <h3>Waiting for <strong>@active_user</strong></h3>

  <% end %>
  </div>
</div>