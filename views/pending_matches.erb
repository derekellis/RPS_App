<div id="pending" class="content">
 <h2>Pending Matches</h2>
 <% if @pending_matches %>
   <% count = 1 %>
   <table>
     <tr>
       <th>Match</th>
       <th>Opponent</th>
       <th>Status</th>
     </tr>
   <% @pending_matches.each do |match| %>
    <% if @current_player != RPS.dbi.get_player_by_id(match['player2']).username %>
     <tr>
     <% if match['status'] == 'pending' %>
       <td><%= count %></td>
       <td>
             <%= RPS.dbi.get_player_by_id(match['player2']).username %>
             <!-- 
              this view establishes that an invite has been sent
              -no play button is necessary, nor interaction required from
              player in this view
             -->
        <% count += 1 %>
       </td>
       <td><%= match['status']%></td>
     <% end %>
     </tr>
    <% end %>
   <% end %>
   </table>
 <% else %>
   <strong>You don't have any pending matches.</strong>
 <% end %>
</div>