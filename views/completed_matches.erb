<div id="completed" class="content">
  <h2>Completed Matches</h2>
  <% if @completed_matches.is_a?(Array) %>
    <table>
      <tr>
        <th>Match Name</th>
        <th>Opponent</th>
        <th>Winner</th>
        <th>Game 1</th>
        <th>Game 2</th>
        <th>Game 3</th>
        <th>Game 4</th>
        <th>Game 5</th>
      </tr>
    <% @completed_matches.each do |match| %>
      <tr>
      <% if match['status'] == 'completed' %>
        <td><%= match['id'] %></td>
        <td><%= RPS.dbi.get_player_by_id(match['player2']).username %></td>
        <td><strong><%= RPS.dbi.get_player_by_id(match['winner']).username %></strong></td>
        <% games = RPS.dbi.games_by_match(match['id']) %>
        <% games.each do |game| %>
          <% if game['winner'] %>
          <td><%= RPS.dbi.get_player_by_id(game['winner']).username %> won!</td>
          <% else %>
          <td>--</td>
          <% end %>
        <% end %>
      <% end %>
      </tr>
    <% end %>
    </table>
  <% else %>
    <strong>You don't have any completed matches.</strong>
  <% end %>
</div>